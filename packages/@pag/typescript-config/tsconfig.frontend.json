{
	"extends": "./tsconfig.common.json",
	"compilerOptions": {
		"target": "esnext",
		"module": "esnext",
		"importHelpers": true,
		"allowJs": true,
		"incremental": false,
		"allowSyntheticDefaultImports": true,
		"lib": ["esnext", "dom", "dom.iterable", "scripthost"],
		"jsx": "react-jsx"
	},
	"include": ["src/**/*.ts", "src/**/*.tsx"]
}
