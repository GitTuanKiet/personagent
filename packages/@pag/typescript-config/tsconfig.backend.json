{
	"extends": "./tsconfig.common.json",
	"compilerOptions": {
		"lib": ["esnext", "dom"],
		"target": "esnext",
		"module": "esnext",
		"allowJs": true,
		"moduleResolution": "bundler",
		"allowImportingTsExtensions": true,
		"verbatimModuleSyntax": true,
		"noEmit": true,
		"strict": true,
		"skipLibCheck": true,
		"noFallthroughCasesInSwitch": true,
		"noUncheckedIndexedAccess": true,
		"types": ["bun"]
	}
}
