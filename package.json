{
  "name": "pag-monorepo",
  "private": true,
  "scripts": {
    "prepare": "bun scripts/prepare.mjs",
    "preinstall": "bun scripts/block-npm-install.js",
    "build": "turbo run build",
    "clean": "turbo run clean --parallel",
    "reset": "bun scripts/reset.mjs",
    "format": "turbo run format && bun scripts/format.mjs",
    "format:check": "turbo run format:check",
    "lint": "turbo run lint",
    "lintfix": "turbo run lintfix",
    "check-types": "turbo run check-types",
    "syncpack-fix": "pnpm dlx syncpack@alpha fix",
    "syncpack-update": "pnpm dlx syncpack@alpha update"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@pag/eslint-config": "workspace:*",
    "@swc/core": "^1.12.0",
    "@types/node": "*",
    "lefthook": "^1.11.13",
    "prettier": "^3.5.3",
    "rimraf": "^6.0.1",
    "tsup": "^8.5.0",
    "turbo": "^2.5.4",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=22.15.1"
  },
  "packageManager": "pnpm@10.4.1",
  "workspaces": [
    "apps/*",
    "packages/*",
    "packages/@pag/*"
  ]
}