{
  "name": "@pag/mcp-patchright",
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "clean": "rimraf dist .turbo",
    "typecheck": "tsc --noEmit",
    "build": "bun build --entrypoints src/index.ts --minify --outdir dist --target node --env disable --drop console && chmod 755 dist/index.js",
    "watch": "bun --watch src/index.ts",
    "build:server": "bun build --entrypoints src/server.ts --minify --outdir out --target bun --env disable && chmod 755 out/server.js",
    "watch:server": "bun --watch src/server.ts"
  },
  "files": [
    "dist"
  ],
  "bin": {
    "mcp-patchright": "./dist/index.js"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.12.3",
    "@pag/browser-manager": "workspace:*",
    "chromium-bidi": "^5.3.1",
    "patchright": "^1.52.5",
    "zod": "^3.25.64",
    "zod-to-json-schema": "^3.24.5"
  },
  "devDependencies": {
    "@pag/typescript-config": "workspace:*",
    "@types/bun": "*",
    "rimraf": "^6.0.1",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=22.15.1"
  }
}